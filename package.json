{
  "name": "uber",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "predev": "yarn run types",
    "dev": "nodemon --exec ts-node src/index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "lint": "tslint -p tsconfig.json -c ./tslint.json",
    "format": "tslint-config-prettier-check ./tslint.json",
    "test": "jest -c jest.config.unit.js --passWithNoTests --forceExit --detectOpenHandles"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonypark0403/uber.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tonypark0403/uber/issues"
  },
  "homepage": "https://github.com/tonypark0403/uber#readme",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^13.13.4",
    "@types/twilio": "^2.11.0",
    "apollo-boost": "^0.4.7",
    "babel-runtime": "^6.26.0",
    "class-validator": "^0.12.2",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "global": "^4.4.0",
    "graphql-request": "^1.8.2",
    "graphql-tools": "^5.0.0",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.22.0",
    "heroku": "^7.39.5",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.2.0",
    "merge-graphql-schemas": "^1.7.8",
    "morgan": "^1.10.0",
    "pg": "^8.0.3",
    "twilio": "^3.43.0",
    "typeorm": "^0.2.24"
  }
}
